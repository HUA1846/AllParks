<% layout('layouts/boilerplate')  %> 
<div class="row">
    <h1 class="text-center">Update Park</h1>
    <div class="col-6 offset-3">
        <form action="/parks/<%=park._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="name">Park Name:</label>
                <input class="form-control" type="text" name="name" id="name" value="<%= park.name %> " required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location:</label>
                <input class="form-control" type="text" name="location" id="location" value="<%= park.location %>" required>
            </div>
            <img src="<%=park.image%>" alt="">
            <div class="mb-3">
                <label class="form-label" for="image">Image</label>
                <input type="file" name="image" id="image" multiple>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Entrance Fee:</label>
                <input class="form-control" type="number" min="0" name="price" id="price" value="<%= park.price %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="category">Park Type:</label>
                <select class="form-select" name="category" id="category">
                    <option value="state">state</option>
                    <option value="local">local/city</option>
                    <option value="private">private</option>
                    <option value="unknown" selected>unknown</option>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label" for="parking">Parking Information:</label>
                <input class="form-control" type="text" name="parking" id='parking' value="<%= park.parking %> ">
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description:</label>
                <div>
                <textarea class="form-control" name="description" id="description" cols="30" rows="10"><%=park.description %></textarea>
                </div>
                
            </div>
            <div class="mb-3">
                <% park.image.forEach(function(img, i){ %> 
                    <img src="<%=img.thumbnail%>" alt="" class="img-thumbnail">
                    <div class="form-check-inlinie">
                        <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                       <!-- any check box that is checked, it's value is added to deleteImages[] array -->
                    </div>
                    <label for="image-<%=i%>">Delete</label>
                <% }) %> 
            </div>
            <div class="mb-3">
                <button class="btn btn-primary">Submit</button>
            </div>
            <a href="/parks">Cancel</a>
        </form>
        </div>
    


