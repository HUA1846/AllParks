
<% layout('layouts/boilerplate')  %> 
<div class="card mb-3" id='map' style='width: 1200px; height: 600px;'></div>
    <h1>All Parks</h1>
        <% for(let park of parks) { %>
            <div class="card" mb-3>
                <div class="row">
                    <div class="col-md-4">
                        <%if(park.image.length){ %> 
                        <img class="img-fluid" alt="" src="<%=park.image[0].url%>">
                        <% } else { %> 
                            <span>No Image Showing</span>
                        <% } %> 
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%=park.name%></h5>
                            <small class="text-muted"><%=park.location%> </small>
                            <p class="card-text"><%=park.description%> </p>
                            <div>
                                <a class="btn btn-primary" href="/parks/<%=park._id%>">View</a>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
            <% } %> 

<script>
    const mapToken = "<%-process.env.MAPBOX_TOKEN%>";
    const parks = { features: <%-JSON.stringify(parks)%>};
</script>
<script src="/javascript/clusterMap.js"></script>
  
    
